<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp">

        <TextView
            android:id="@+id/popup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="28dp"/>

        <TextView
            android:id="@+id/popup_weight_text"
            android:layout_below="@id/popup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight : "
            android:textSize="20dp"
            android:paddingVertical="8dp"/>

        <EditText
            android:id="@+id/popup_weight_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_toRightOf="@id/popup_weight_text"
            android:layout_below="@id/popup_name"
            android:hint="Enter weight"/>

        <TextView
            android:id="@+id/popup_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculated calories goes here"
            android:textSize="20dp"
            android:layout_marginVertical="6dp"
            android:layout_below="@id/popup_weight_box"/>

        <Button
            android:id="@+id/popup_edit"
            android:layout_marginVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorLightText"
            android:layout_below="@id/popup_calories" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popup_delete"
            android:layout_margin="8dp"
            android:text="DELETE"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightText"
            android:layout_toRightOf="@id/popup_edit"
            android:layout_below="@id/popup_calories"/>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/popup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="28dp"/>

    <TextView
        android:id="@+id/popup_duration_text"
        android:layout_below="@id/popup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration : "
        android:textSize="20dp"
        android:paddingVertical="8dp"/>

    <EditText
        android:id="@+id/popup_duration_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/popup_duration_text"
        android:layout_below="@id/popup_name"
        android:hint="Enter duration (minutes)"/>

    <TextView
        android:id="@+id/popup_distance_text"
        android:layout_below="@id/popup_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance : "
        android:textSize="20dp"
        android:paddingVertical="8dp"/>

    <EditText
        android:id="@+id/popup_distance_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/popup_duration_text"
        android:layout_below="@id/popup_duration_box"
        android:hint="Enter distance (km)"/>

    <TextView
        android:id="@+id/popup_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculated calories goes here"
        android:textSize="20dp"
        android:layout_marginVertical="6dp"
        android:layout_below="@id/popup_distance_box"/>

    <Button
        android:id="@+id/popup_add"
        android:layout_marginVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLightText"
        android:layout_below="@id/popup_calories" />

</RelativeLayout>